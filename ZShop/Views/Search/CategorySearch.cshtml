@model ZShop.Models.Pagination.PaginatedList<Entities.Product>

@{
    ViewData["Title"] = "CategorySearch";
}

<!DOCTYPE html>
<html lang="en">
<style>
    a.disabled {
        pointer-events: none;
        cursor: default;
    }
</style>
<body>

    <!-- Navbar ================================================== -->
    <!-- Header End====================================================================== -->
    
                <!-- Sidebar ================================================== -->
                <!-- Sidebar end=============================================== -->
                <div class="span9">
                    <ul class="breadcrumb">
                        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
                        <li class="active">Products Name</li>
                    </ul>



                    <div class="tab-pane  active" id="blockView">
                        <ul class="thumbnails">

                            @foreach (var item in Model)
                            {
                                <li class="span3">
                                    <div class="thumbnail">
                                       <img src="@Html.DisplayFor(x => item.ImageUrlShowCase)" alt="" />
                                        <div class="caption">
                                            <h5>@Html.DisplayFor(x => item.Name)</h5>
                                            <p>
                                                <a asp-controller="Home" asp-action="ViewProduct" asp-route-id="@item.Id">Осмотреть</a>
                                            </p>
                                            <h4 style="text-align:center"><a class="btn" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@item.Id">Add to <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary">@item.Price грн</a></h4>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                        <hr class="soft" />
                        @{
                            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                        }

                        <a asp-action="CategorySearch"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="btn btn-default @prevDisabled">
                            Назад
                        </a>
                        <a asp-action="CategorySearch"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="btn btn-default @nextDisabled">
                            Далее
                        </a>

                        <br class="clr" />
                    </div>
                </div>

               
           
        

</body>
</html>