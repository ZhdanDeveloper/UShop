@model ZShop.Models.Account.RegisterModel

@{
    ViewData["Title"] = "Register";
}









<!DOCTYPE html>
<html lang="en">

<body>
   
    <!-- Header End====================================================================== -->
    
                <!-- Sidebar ================================================== -->
                
                <!-- Sidebar end=============================================== -->
                <div class="span9">
                    <ul class="breadcrumb">
                        <li><a asp-action="Index" asp-controller="Home">Главная</a> <span class="divider">/</span></li>
                        <li class="active">Регистрация</li>
                    </ul>
                    <h3> Registration</h3>
                    <div class="well">
                      
                        <form class="form-horizontal" asp-action="Register" asp-controller="Account">



                            <div class="control-group">
                                <label class="control-label" asp-for="Name">Никнейм [должен быть уникальным]</label>
                                <div class="controls">
                                    <input asp-for="Name" class="form-control" required="required">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" asp-for="Email">Адрес електронной почты</label>
                                <div class="controls">
                                    <input asp-for="Email" class="form-control" required="required">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" asp-for="Phone">Телефон</label>
                                <div class="controls">
                                    <input asp-for="Phone" value="+380" class="form-control" required="required">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" asp-for="Password">Пароль</label>
                                <div class="controls">
                                    <input asp-for="Password" class="form-control" required="required">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label col-xs-4" asp-for="ConfirmPassword">Подтвердите пароль</label>
                                <div class="controls">
                                    <input asp-for="ConfirmPassword" class="form-control" required="required">
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-primary btn-lg">Зарегистрироваться</button>
                                </div>
                            </div>
                            <div style="color:red;" class="validation" asp-validation-summary="ModelOnly"></div>
                        </form>
                    </div>

                </div>
          
    <!-- MainBody End ============================= -->
    <!-- Footer ================================================================== -->
   
  
</body>
</html>




